<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="r/Politics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/categoryLinkTextView" />

    <TextView
        android:text=" * "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/categoryLinkTextView"
        android:layout_toEndOf="@+id/categoryLinkTextView"
        android:id="@+id/textView2" />

    <TextView
        android:text="15h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postTimeTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:text=" * "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/postTimeTextView"
        android:layout_toEndOf="@+id/postTimeTextView" />

    <TextView
        android:text="i.images.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:id="@+id/itemSourcePageTextView" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryLinkTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/titleTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Light.Large" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@android:color/darker_gray"
        android:id="@+id/itemImageImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titleTextView"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:layout_above="@+id/bottomToolbarGridLayout" />

    <LinearLayout
        android:id="@+id/bottomToolbarGridLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp">

        <Button
            android:id="@+id/button3"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Button 1"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Button 2"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button5"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Button 3"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>